<div class="container">

  <%= simple_form_for @event, html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">

    <div class="field">
      <%= f.label :event_title, class: 'col-md-3 control-label' %>
      <br>
      <%= f.text_area :event_title, class: '' %>
      <br/>
      <%= f.label "Event start date" %>
      <br>
      <%= f.datetime_select :event_start %>
      <br>
      <%= f.label "Event end date" %>
      <br>
      <%= f.date_select :event_start %>
    </div>
    <div class="field">
      <%= f.label :event_text %>
      <br>
      <%= f.text_area :event_text %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
    </div>
    <% end %>

</div>
